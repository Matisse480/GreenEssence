<body>

    <header>
        <h1>GreenEssence - Boutique Écologique</h1>
        <nav>
            <a href="#" onclick="showHomePage()">Accueil</a>
            <a href="#" onclick="showCategories()">Produits</a>
        </nav>
    </header>

    <div class="container" id="homePage">
        <h2>Bienvenue sur notre boutique éco-responsable</h2>
        <p>Découvrez des produits respectueux de l'environnement et de qualité supérieure.</p>
        <button onclick="showCategories()">Voir nos produits</button>
    </div>

    <div class="container" id="categoriesPage" style="display:none;">
        <h2>Choisissez une catégorie</h2>
        <div class="categories">
            <div class="category">
                <h2>Gourdes</h2>
                <img src="https://via.placeholder.com/200" alt="Gourdes">
                <button onclick="showProducts('gourdes')">Voir les produits</button>
            </div>
            <div class="category">
                <h2>Cosmétiques</h2>
                <img src="https://via.placeholder.com/200" alt="Cosmétiques">
                <button onclick="showProducts('cosmetiques')">Voir les produits</button>
            </div>
            <div class="category">
                <h2>Accessoires</h2>
                <img src="https://via.placeholder.com/200" alt="Accessoires">
                <button onclick="showProducts('accessoires')">Voir les produits</button>
            </div>
            <div class="category">
                <h2>Vêtements</h2>
                <img src="https://via.placeholder.com/200" alt="Vêtements">
                <button onclick="showProducts('vetements')">Voir les produits</button>
            </div>
        </div>
    </div>

    <div class="container" id="productsPage" style="display:none;">
        <h2 id="categoryTitle"></h2>
        <div class="products" id="productList"></div>
        <button class="back-button" onclick="showCategories()">Retour aux catégories</button>
    </div>

    <script>
        const products = {
            gourdes: [
                { name: "Gourde en bambou", image: "https://via.placeholder.com/200", description: "Gourde écologique, 100% biodégradable." },
                { name: "Gourde inox", image: "https://via.placeholder.com/200", description: "Gourde en acier inoxydable, isotherme." }
            ],
            cosmetiques: [
                { name: "Savon bio", image: "https://via.placeholder.com/200", description: "Savon fait main, 100% naturel." },
                { name: "Shampooing solide", image: "https://via.placeholder.com/200", description: "Shampooing bio, zéro déchet." }
            ],
            accessoires: [
                { name: "Sacs en toile", image: "https://via.placeholder.com/200", description: "Sac réutilisable, idéal pour le shopping." },
                { name: "Brosse en bambou", image: "https://via.placeholder.com/200", description: "Brosse écologique en bambou." }
            ],
            vetements: [
                { name: "T-shirt bio", image: "https://via.placeholder.com/200", description: "T-shirt en coton bio." },
                { name: "Pantalon éthique", image: "https://via.placeholder.com/200", description: "Pantalon fabriqué de manière éthique." }
            ]
        };

        function showHomePage() {
            document.getElementById("homePage").style.display = "block";
            document.getElementById("categoriesPage").style.display = "none";
            document.getElementById("productsPage").style.display = "none";
        }

        function showCategories() {
            document.getElementById("homePage").style.display = "none";
            document.getElementById("categoriesPage").style.display = "block";
            document.getElementById("productsPage").style.display = "none";
        }

        function showProducts(category) {
            document.getElementById("homePage").style.display = "none";
            document.getElementById("categoriesPage").style.display = "none";
            document.getElementById("productsPage").style.display = "block";

            document.getElementById("categoryTitle").textContent = category.charAt(0).toUpperCase() + category.slice(1);
            const productList = document.getElementById("productList");
            productList.innerHTML = "";
            
            products[category].forEach(product => {
                const productDiv = document.createElement("div");
                productDiv.classList.add("product");
                productDiv.innerHTML = `
                    <h3>${product.name}</h3>
                    <img src="${product.image}" alt="${product.name}">
                    <p>${product.description}</p>
                `;
                productList.appendChild(productDiv);
            });
        }

        showHomePage(); // Afficher la page d'accueil par défaut
    </script>

</body>
